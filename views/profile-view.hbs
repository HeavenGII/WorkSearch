<!-- profile-view.hbs -->
<div class="row" style="margin-top: 10px;">
  <div class="col s12">
    <h1>Профиль пользователя</h1>
    <div class="row">
      <div class="col s6">
        {{#if portfolio.avatarUrl}}
          <img src="{{portfolio.avatarUrl}}" alt="Аватар" class="avatar-img">
        {{else}}
          <div class="no-avatar">Нет аватара</div>
        {{/if}}
      </div>

      <div class="col s6">
        <div class="profile-info">
          <div class="info-row">
            <span class="info-label">Email:</span>
            <span class="info-value">{{user.email}}</span>
          </div>
          
          <div class="info-row">
            <span class="info-label">Имя:</span>
            <span class="info-value">{{portfolio.name}}</span>
          </div>
          
          <div class="info-row">
            <span class="info-label">Фамилия:</span>
            <span class="info-value">{{portfolio.surname}}</span>
          </div>

          <div class="info-row">
            <span class="info-label">Отчество:</span>
            <span class="info-value">{{portfolio.secondname}}</span>
          </div>

          <div class="info-row">
            <span class="info-label">Город:</span>
            <span class="info-value">{{portfolio.city}}</span>
          </div>

          <div class="info-row">
            <span class="info-label">Дата рождения:</span>
            <span class="info-value">{{formatDate portfolio.birthday}}</span>
          </div>
          
          <div class="info-row">
            <span class="info-label">Пол:</span>
            <span class="info-value">{{portfolio.sex}}</span>
          </div>
          
          <div class="info-row">
            <span class="info-label">Образование:</span>
            <span class="info-value">{{portfolio.education}}</span>
          </div>

          <div class="info-row">
            <span class="info-label">Телефон:</span>
            <span class="info-value">{{portfolio.telephone}}</span>
          </div>

          <div class="info-row">
            <span class="info-label">О себе:</span>
            <div class="info-value">{{portfolio.information}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .avatar {
    border-radius: 50%;
    margin-bottom: 20px;
    max-width: 300px;
  }
  
  .no-avatar {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }
  
  .profile-info {
    padding: 20px;
    background: #f5f5f5;
    border-radius: 8px;
  }
  
  .info-row {
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e0e0e0;
    overflow-wrap: break-word; /* Обеспечиваем перенос длинных слов */
  }
  
  .info-label {
    font-weight: bold;
    display: inline-block;
    width: 150px;
    color: #616161;
  }
  
  .info-value {
    display: inline-block;
    word-wrap: break-word; /* Перенос слов на новую строку */
    max-width: 100%; /* Ограничиваем ширину */
  }
</style>